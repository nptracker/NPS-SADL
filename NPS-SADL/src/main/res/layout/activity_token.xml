<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
   xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
   android:background="@color/white"
   android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
   android:paddingRight = "@dimen/activity_horizontal_margin"
   android:paddingTop = "@dimen/activity_vertical_margin"
   android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">

   <TextView android:text = "NPS Access Token"
      android:layout_width="wrap_content"
      android:layout_height = "wrap_content"
      android:id = "@+id/textview"
      android:textSize = "55dp"
      android:textColor = "#000000"
      android:layout_alignParentTop = "true"
      android:layout_centerHorizontal = "true" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Scanner token setup"
        android:id = "@+id/textView"
        android:layout_below = "@+id/textview"
        android:layout_centerHorizontal = "true"
        android:textColor = "#000000"
        android:textSize = "25dp" />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Login with your NPSCloud credentials\nNot Registered? goto http://www.npscloud.co.za/register.php"
        android:id = "@+id/textView1"
        android:layout_below = "@+id/textView"
        android:layout_centerHorizontal = "true"
        android:textColor = "#000000"
        android:textSize = "12dp" />

   <EditText
      android:layout_width = "wrap_content"
      android:layout_height = "wrap_content"
      android:id = "@+id/editUser1"
      android:hint = "User Name"
      android:focusable = "true"
      android:textColorHint = "#ffff25e6"
      android:textColor = "#ffff25e6"
      android:layout_marginTop = "46dp"
      android:layout_below = "@+id/imageView"
      android:layout_alignParentLeft = "true"
      android:layout_alignParentStart = "true"
      android:layout_alignParentRight = "true"
      android:layout_alignParentEnd = "true" />

   <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/imageView"
      android:src="@drawable/logo"
      android:layout_below="@+id/textView1"
      android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "http://www.npscloud.co.za"
        android:layout_below = "@+id/imageView"
        android:layout_centerHorizontal = "true"
        android:textColor = "#000000"
        android:textSize = "12dp" />
    <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="textPassword"
      android:ems="10"
      android:id="@+id/editPassword1"
      android:layout_below="@+id/editUser1"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignRight="@+id/editUser1"
      android:layout_alignEnd="@+id/editUser1"
      android:textColorHint="#ffff299f"
      android:textColor = "#ffff25e6"
      android:hint="Password" />

    <Button
        android:id="@+id/btnGuardLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editPassword1"
        android:text="login" />
</RelativeLayout>